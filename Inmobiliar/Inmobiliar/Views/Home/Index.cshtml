@model Inmobiliar.Models.DatosInmobiliariaModel
@{
    ViewBag.Title = "Home Page";
}

<div id="page-wrapper">
    <div id="page-inner">
        @if (ViewBag.TipoMsj == "Info")
        {
            <div class="alert alert-info alert-inline">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong id="strMsj">@ViewBag.Message</strong>
            </div>
        }
        @if (ViewBag.TipoMsj == "Error")
        {
            <div class="alert alert-danger alert-inline margin-top-50 margin-bottom-50">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>@ViewBag.Message</strong>
            </div>
        }
        @if (ViewBag.TipoMsj == "Success")
        {
            <div class="alert alert-success alert-inline margin-top-50 margin-bottom-50">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>@ViewBag.Message</strong>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    Inmobiliaria <small>@Model.NombreInmobiliaria</small>
                </h1>
            </div>
        </div>                        

        <!-- /. ROW  -->
        <div class="row">
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="panel panel-primary text-center no-boder bg-color-green">
                    <div class="panel-body">
                        <i class="fa fa-bar-chart-o fa-5x"></i>
                        <h3>@Model.InmueblesEnAlquiler</h3>
                    </div>
                    <div class="panel-footer back-footer-green">
                        Inmuebles en Alquiler
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="panel panel-primary text-center no-boder bg-color-blue">
                    <div class="panel-body">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                        <h3>@Model.InmueblesEnVenta</h3>
                    </div>
                    <div class="panel-footer back-footer-blue">
                        Inmuebles en Ventas

                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="panel panel-primary text-center no-boder bg-color-red">
                    <div class="panel-body">
                        <i class="fa fa fa-comments fa-5x"></i>
                        <h3>15,823 </h3>
                    </div>
                    <div class="panel-footer back-footer-red">
                        Mensajes de Clientes
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="panel panel-primary text-center no-boder bg-color-brown">
                    <div class="panel-body">
                        <i class="fa fa-users fa-5x"></i>
                        <h3>36,752 </h3>
                    </div>
                    <div class="panel-footer back-footer-brown">
                        Futuros Clientes
                    </div>
                </div>
            </div>
        </div>

        <!-- /. ROW  -->
        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Tareas Diarias
                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            @Html.Raw(Model.TareasDiarias)                                                        
                            <a href="#" class="list-group-item">
                                <span class="badge">36 minutes ago</span>
                                <i class="fa fa-fw fa-globe"></i> Invoice 653 has paid
                            </a>
                            <a href="#" class="list-group-item">
                                <span class="badge">1 hour ago</span>
                                <i class="fa fa-fw fa-user"></i> A new user has been added
                            </a>
                            <a href="#" class="list-group-item">
                                <span class="badge">1.23 hour ago</span>
                                <i class="fa fa-fw fa-user"></i> A new user has added
                            </a>
                            <a href="#" class="list-group-item">
                                <span class="badge">yesterday</span>
                                <i class="fa fa-fw fa-globe"></i> Saved the world
                            </a>

                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Detalle</h4>
                                        </div>
                                        <div class="modal-body">
                                            <span id="mje"></span>                                            
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <a href="#">More Tasks <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Alquileres Impagos
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>                                        
                                        <th>Inquilino</th>
                                        <th>Adeuda</th>
                                        <th>Phones</th>
                                        <th>Email ID.</th>
                                        <th>Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(Model.Impagos)                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Inquilinos con Pendientes
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Inquilino</th>
                                        <th>Adeuda</th>
                                        <th>Last Name</th>
                                        <th>User Name</th>
                                        <th>Email ID.</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(Model.Pendientes)                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /. ROW  -->
        <footer><p>All right reserved.</p></footer>
    </div>
    <!-- /. PAGE INNER  -->
</div>