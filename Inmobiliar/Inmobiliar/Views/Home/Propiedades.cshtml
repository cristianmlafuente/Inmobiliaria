                                <li>
                                    @Html.ActionLink("Alta", "Create", "Propiedades", new { area = "" }, new { @class = "fa fa-dashboard active-menu" })
                                    @*<a href="ui-elements.html"><i class="fa fa-desktop"></i> UI Elements</a>
                                </li>
                            </ul>
                        </div>*@
